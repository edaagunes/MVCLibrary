@using MVCLibrary.Models.Entity
@model List<Sale>
@{
    ViewBag.Title = "MemberBooks";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}


<h2>Kitap Geçmişi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Kitap Adı</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Book1.Name</td>
            <td style="background-color:azure">@Convert.ToDateTime(k.AcquisitionDate).ToString("dd/MM/yyyy")</td>
            <td style="background-color:khaki">@Convert.ToDateTime(k.MemberReturnDate).ToString("dd/MM/yyyy")</td>
        </tr>
    }

</table>

