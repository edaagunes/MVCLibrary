@model MVCLibrary.Models.Entity.Member
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Üye Profil Bilgileri</h2>
<br />
@using (Html.BeginForm("MemberProfile", "MemberPanel", FormMethod.Post))
{
    <table class="table table-hover">

        <tr>
            <th>Mail Adresi: </th>
            <td>@HttpContext.Current.User.Identity.Name</td>
        </tr>

        <tr>
            <th>Ad: </th>
            <td>@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <th>Soyad: </th>
            <td>@Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <th>Kullanıcı Adı: </th>
            <td>@Html.TextBoxFor(x => x.Username, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <th>Şifre: </th>
            <td>@Html.TextBoxFor(x => x.Password, new { @class = "form-control" })</td>
        </tr>


        <tr>
            <th>Fotoğraf: </th>
            <td>@Html.TextBoxFor(x => x.Photo, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <th>Öğrenim Bilgisi: </th>
            <td>@Html.TextBoxFor(x => x.School, new { @class = "form-control" })</td>
        </tr>

        <tr>
            <td>
                <button class="btn btn-warning">Güncelle</button>
            </td>
        </tr>
    </table>

}