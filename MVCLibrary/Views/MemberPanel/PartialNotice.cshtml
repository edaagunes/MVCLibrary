@using MVCLibrary.Models.Entity
@model List<Announcement>

    @foreach (var item in Model)
    {
        string color = "";
        if (item.Category=="Yeni Kitap")
        {
            color = "text-green";
        }
        if (item.Category == "Kitapları Geciktirmeyin")
        {
            color = "text-red";
        }
        if (item.Category == "Diğer")
        {
            color = "text-yellow";
        }
        if (item.Category == "İletişim")
        {
            color = "text-blue";
        }

        <div class="post">
            <div class="user-block">
                <img class="img-circle img-bordered-sm" src="~/AdminLTE-3.0.4/dist/img/2.png" alt="user image">
                <span class="username">
                    <a href="#" class="@color">@item.Category</a>
                    <a href="#" class="float-right btn-tool"><i class="fas fa-times"></i></a>
                </span>
                <span class="description">@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</span>
            </div>
            <p>@item.Content</p>
        </div>
    }


