@model MVCLibrary.Models.Entity.Book
@{
    ViewBag.Title = "UpdateBook";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}


<h2>Kitap Güncelleme Sayfası</h2>
<br />

@using (Html.BeginForm("UpdateBook", "Book", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">

        @Html.HiddenFor(x => x.BookID)
        <div style="margin-bottom:15px">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kategori Adı</label>
            @Html.DropDownListFor(x => x.Category1.CategoryID, (List<SelectListItem>)ViewBag.categories, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazar Adı</label>
            @Html.DropDownListFor(x => x.Author1.AuthorID, (List<SelectListItem>)ViewBag.authors, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Basım Yılı</label>
            @Html.TextBoxFor(x => x.PublicationYear, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yayın Evi</label>
            @Html.TextBoxFor(x => x.PublishingHouse, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Sayfa Sayısı</label>
            @Html.TextBoxFor(x => x.Page, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-success">Kitap Güncelle</button>
            <input type="hidden" name="Status" value="True" />
        </div>
    </div>
}

