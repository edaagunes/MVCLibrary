@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<MVCLibrary.Models.Entity.Member>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Üyeler</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>Üye ID</th>
        <th>Üye</th>
        <th>Mail</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Fotoğraf</th>
        <th>Telefon</th>
        <th>Okul</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MemberID</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.Mail</td>
            <td>@item.Username</td>
            <td>@item.Password</td>
            <td>@item.Photo</td>
            <td>@item.Phone</td>
            <td>@item.School</td>
            <td><a href="/Member/DeleteMember/@item.MemberID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Member/UpdateMember/@item.MemberID" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))

<a href="/Member/AddMember/" class="btn btn-primary">Yeni Üye Ekle</a>

