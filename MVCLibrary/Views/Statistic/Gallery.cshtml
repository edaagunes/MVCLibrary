
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <br />
    <div class="container">
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 1000px; height: 500px; margin-left: 70px">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">

                <div class="item active">
                    <img src="~/web2/photos/book1.jpg" alt="" style="width: 100%; height: 500px">
                    <div class="carousel-caption">
                        <h3>Ankara</h3>
                        <p>Yaşamla ölüm arasında bir kütüphane var.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/web2/photos/book2.jpg" alt="" style="width: 100%; height: 500px">
                    <div class="carousel-caption">
                        <h3>İstanbul</h3>
                        <p>Dünya bir kütüphane keşfedilmeyi bekleyen.İçinde yaşadığın şehir bir eser açılmayı bekleyen.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/web2/photos/book3.jpg" alt="" style="width: 100%; height: 500px">
                    <div class="carousel-caption">
                        <h3>İzmir</h3>
                        <p>Kütüphaneler medeniyetlerin hafızasıdır.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/web2/photos/book4.jpg" alt="" style="width: 100%; height: 500px">
                    <div class="carousel-caption">
                        <h3>Bursa</h3>
                        <p>Kütüphane dışardan kaçıp uygarlığa sığındığı bir yer gibiydi.</p>
                    </div>
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</body>
</html>
<br />
<div style="margin-top:50px;margin-left:550px">
    <form action="/Statistic/UploadImage" method="post" enctype="multipart/form-data">
        <input type="file" name="file" id="file" class="btn btn-secondary" />
        <br />
        <input type="submit" value="Kaydet" class="btn btn-dark" style="margin-left:20px" />
    </form>
</div>