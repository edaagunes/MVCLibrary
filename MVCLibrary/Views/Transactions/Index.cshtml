@using MVCLibrary.Models.Entity
@model List<Sale>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>İadesi Alınan Kitap Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>İşlem ID</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>Üye İade Tarihi</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.SaleID</td>
            <td>@k.Book1.Name</td>
            <td>@k.Member1.Name @k.Member1.Surname</td>
            <td>@k.Staff1.Name</td>
            <td style="background-color:azure">@Convert.ToDateTime(k.AcquisitionDate).ToString("dd/MM/yyyy")</td>
            <td style="background-color:khaki">@Convert.ToDateTime(k.MemberReturnDate).ToString("dd/MM/yyyy")</td>
            <td><a href="/Lend/BorrowBook/@k.SaleID" class="btn btn-default" style="background-color:lightpink">Detaylar</a></td>
        </tr>
    }

</table>