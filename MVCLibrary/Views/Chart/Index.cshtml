
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kategori-Ürün Grafiği</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <style>
        .card {
            height: 400px; /* Set a fixed height for the card */
        }

        #pieChart {
            width: 100%;
            height: 100%;
        }

        #lineChart {
            width: 100%;
            height: 100%;
        }

        #doughnutChart {
            width: 40%;
            height: 60%;
        }
    </style>
</head>
<body>
    <div class="col-lg-6 grid-margin grid-margin-lg-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <canvas id="pieChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-6 grid-margin grid-margin-lg-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <canvas id="lineChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin grid-margin-lg-0 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>
                <canvas id="doughnutChart"></canvas>
            </div>
        </div>
    </div>
</body>
</html>

<script>

// PIE CHART
$(document).ready(function () {
    $.ajax({
        type: "POST",
        dataType: "json",
        contentType: "application/json",
        url: '@Url.Action("BooksCategory", "Chart")',
        success: function (result) {
            drawPieChart(result);  // drawPieChart fonksiyonu kullanılıyor
        },
        error: function (xhr, status, error) {
            console.error("AJAX Hatası:", status, error);
        }
    });
});

function drawPieChart(result) {
    var labels = [];
    var dataValues = [];

    $.each(result, function (i, obj) {
        labels.push(obj.CategoryName);
        dataValues.push(obj.BookCount);
    });

    var ctx = document.getElementById('pieChart').getContext('2d');
    var myPieChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: labels,
            datasets: [{
                label: 'Kitap Sayısı',
                data: dataValues,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)',
                    'rgba(255, 99, 71, 0.6)',
                    'rgba(64, 224, 208, 0.6)',
                    'rgba(148, 0, 211, 0.6)'

                ],
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            title: {
                display: true,
                text: 'Kategori-Kitap Grafiği'
            },
        }
    });
    }

    // LINE CHART
$(document).ready(function () {
    $.ajax({
        type: "POST",
        dataType: "json",
        contentType: "application/json",
        url: '@Url.Action("PublishingHouse", "Chart")',
        success: function (result) {
            console.log(result);
            drawLineChart(result);  // drawLineChart fonksiyonu kullanılıyor
        },
        error: function (xhr, status, error) {
            console.error("AJAX Hatası:", status, error);
            console.error("Hata Detayı:", xhr.responseText);
        }
    });
});

function drawLineChart(result) {
    var labels = [];
    var dataValues = [];

    $.each(result, function (i, obj) {
        console.log(obj);
        labels.push(obj.PublishingHouseName);
        dataValues.push(obj.BookCount);
    });

    var ctx = document.getElementById('lineChart').getContext('2d');
    var myLineChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [{
                label: 'Yayınevlerine Ait Kitaplar',
                data: dataValues,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)'
                ],
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            title: {
                display: true,
                text: 'Yayınevi-Kitap Grafiği'
            },
        }
    });
    }

    // DOUGHNUT CHART
   $(document).ready(function () {
    $.ajax({
        type: "POST",
        dataType: "json",
        contentType: "application/json",
        url: '@Url.Action("MemberSchool", "Chart", new { area = "Admin" })',
        success: function (result) {
            drawDoughnutChart(result);
        },
        error: function (xhr, status, error) {
            console.error("AJAX Hatası:", status, error);
        }
    });
});

function drawDoughnutChart(result) {
    var labels = [];
    var dataValues = [];

    $.each(result, function (i, obj) {
        labels.push(obj.SchoolName);
        dataValues.push(obj.MemberCount);
    });

    var ctx = document.getElementById('doughnutChart').getContext('2d');
    var myDoughnutChart = new Chart(ctx, {
        type: 'doughnut',
        data: {
            labels: labels,
            datasets: [{
                label: 'Üye Sayısı',
                data: dataValues,
                backgroundColor: [
                    'rgba(255, 99, 132, 0.6)',
                    'rgba(54, 162, 235, 0.6)',
                    'rgba(255, 206, 86, 0.6)',
                    'rgba(75, 192, 192, 0.6)',
                    'rgba(153, 102, 255, 0.6)',
                    'rgba(255, 159, 64, 0.6)'
                ],
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            title: {
                display: true,
                text: 'Üye-Öğrenim Grafiği'
            },
        }
    });
}
</script>