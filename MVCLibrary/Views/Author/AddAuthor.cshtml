@model MVCLibrary.Models.Entity.Author
@{
    ViewBag.Title = "AddAuthor";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Yazar Ekleme Sayfası</h2>
<br />
<form class="form-group" method="post">
    <div>
        <label>Yazar Adı</label>
        <input type="text" class="form-control" name="Name" />
        @Html.ValidationMessageFor(y => y.Name,null, new { @style = "color: red;" })
    </div>
    <br />
    <div>
        <label>Yazar Soyadı</label>
        <input type="text" class="form-control" name="Surname" />
        @Html.ValidationMessageFor(y => y.Surname, null, new { @style = "color: red;" })
    </div>
    <br />
    <div>
        <label>Yazar Detayı</label>
        <input type="text" class="form-control" name="Detail" />
    </div>
    <br />
    <div style="margin-top:15px">
        <button class="btn btn-success" id="Btn1">Yazar Ekle</button>
    </div>
</form>
