@model MVCLibrary.Models.Entity.Staff
@{
    ViewBag.Title = "UpdateStaff";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<h2>Personel Güncelleme Sayfası</h2>
@using (Html.BeginForm("UpdateStaff", "Staff", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.StaffID)
        @*@Html.LabelFor(x => x.CategoryID)
            @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })*@
        <br />
        @Html.LabelFor(x => x.Name)
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
    </div>
    <div>
        <button class="btn btn-success">Güncelle</button>
    </div>
}

